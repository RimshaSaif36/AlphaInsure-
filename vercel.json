{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://alphainsure-backend-production.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://alphainsure-backend-production.up.railway.app",
    "NEXT_PUBLIC_AI_API_URL": "https://alphainsure-ai.onrender.com",
    "NODE_ENV": "production"
  }
}